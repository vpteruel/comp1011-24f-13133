<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.BarChart?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vinicius.hotelbookingsystem.common.DashboardController"
      stylesheets="@css/dashboard.css"
      alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #2d2d83; -fx-padding: 20;">

    <BarChart fx:id="roomChart" style="-fx-background-color: white;">
        <xAxis>
            <CategoryAxis fx:id="xAxis" label="Room Status" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Number of Rooms" />
        </yAxis>
    </BarChart>

    <Button fx:id="backButton" styleClass="back-button" text="Back" onAction="#handleBack" />
</VBox>
